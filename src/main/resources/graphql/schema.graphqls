type Query {
    bookById(id: ID): Book
    getAllBooks: [Book]
}
type Mutation {
    addBook(name: String, pageCount: Int, authorId: Int ) : Book
}

# inputs

input BookInput {
    name: String
    pageCount: Int
    authorId: Int
}

input AuthorInput{

    firstName: String
    lastName: String
}


type Book {
    id: ID
    name: String
    pageCount: Int
    author: Author
}

type Author {
    id: ID
    firstName: String
    lastName: String
    books: [Book]
}